<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ariadiki.randomnumber">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandomNumber">
        <activity
            android:name=".NameOfPlayers"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LeaderBoard"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SpecificNum"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Info"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LevelActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PlayersActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>